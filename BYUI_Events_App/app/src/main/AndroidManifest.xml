<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ombre901.samuelhibbard.byui_events_app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_web"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.ombre901.samuelhibbard.byui_events_app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ombre901.samuelhibbard.byui_events_app.DayActivity"
            android:label="@string/title_activity_day" >
        </activity>
        <activity
            android:name="com.ombre901.samuelhibbard.byui_events_app.WeekActivity"
            android:label="@string/title_activity_week" >
        </activity>
        <activity
            android:name="com.ombre901.samuelhibbard.byui_events_app.MonthActivity"
            android:label="@string/title_activity_month" >
        </activity>
        <activity
            android:name="com.ombre901.samuelhibbard.byui_events_app.MyEventsActivity"
            android:label="@string/title_activity_my_events" >
        </activity>
    </application>

</manifest>

